<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Start doing things now!</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel-group" id="accordion">
      <% @categories.each_with_index do |category, index| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a href="#collapse<%= index %>" data-toggle="collapse" data-parent="#accordion">
                <%= category.name %>
                <%= link_to "x", category, method: :delete, confirm: "Are you sure you want to delete this category and all its items?", class: "close pull-right" %>
              </a>
            </h4>
          </div>
          <div id="collapse<%= index %>" class="panel-collapse collapse">
            <div class="panel-body">
              <%= category.description %>
              <%= link_to "Edit", edit_category_path(category), class: "pull-right" %>
              <br>
              <% category.items.each do |item| %>
                <%= link_to item.name, edit_category_item_path(category, item) %><br>
              <% end %>
              <%= link_to "New item", new_category_item_path(category) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to "New category", new_category_path, class: "btn btn-default" %>
  </div>
</div>
