<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= render partial: "shared/error_messages", locals: { target: resource } %>

      <div><%= f.label :username %><br />
      <%= f.text_field :username, :autofocus => true, class: "form-control" %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control" %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %></div>

      <div class="actions">
        <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
